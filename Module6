header {
    background-color: #333;
    color: white;
    padding: 20px;
    text-align: center;
    font-weight: 400;
}

#navbar {
    overflow: hidden;
    background-color: #333;
    border-bottom: 15px solid #ddd; /* Change the color to your preference */
}

#navbar a {
    float: left;
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

#navbar a:hover {
    background-color: #ddd; /* Change the color to your preference */
    color: black; /* Change the color to your preference */
}

#container {
    margin-top: 2%;
    margin-left: 5%;
    margin-right: 5%;
    padding: 10px;
}

.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    width: 50%;
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.card-title {
    text-align: center;
    font-size: 2em;
    color: #333; /* Change the color to your preference */
    font-weight: 400;
}

.card-content {
    padding: 2px 16px;
}

footer {
    background-color: #333; /* Change the color to match header */
    position: absolute;
    bottom: 0;
    width: 100%;
}

footer p {
    color: white;
    font-weight: 400;
    float: right;
    padding-right: 10px;
    font-style: italic;
}

footer a {
    text-decoration: none;
    color: white;
}

footer a:hover {
    text-decoration: underline;
}

